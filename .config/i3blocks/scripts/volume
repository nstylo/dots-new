#!/bin/sh

case $BLOCK_BUTTON in
	1) pulsemixer --toggle-mute ;;
	3) pavucontrol ;;
	4) pulsemixer --change-volume +5 ;;
	5) pulsemixer --change-volume -5 ;;
esac

[ "$(pulsemixer --get-mute)" = "1" ] && printf "婢\\n" && exit

vol=$(pulsemixer --get-volume | awk '{print $1}')

if [ "$vol" -gt "79" ]; then
	icon=""
elif [ "$vol" -gt "49" ]; then
	icon="墳"
elif [ "$vol" -gt "29" ]; then
	icon="奔"
else
	icon=""
fi

printf "%s %s%%\\n" "$icon" "$vol"
